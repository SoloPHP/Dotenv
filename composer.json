{
  "name": "solophp/dotenv",
  "type": "library",
  "description": "Simple, zero-dependency .env loader for PHP. Loads files into $_ENV with optional $_SERVER population.",
  "keywords": ["dotenv", "env", "php", "psr", "php8", "strict-types"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\Dotenv\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\Dotenv\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  }
}
